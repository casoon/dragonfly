/**
 * Layout Properties with @property Definitions
 * 
 * Typed CSS custom properties for layout using @property.
 * This enables better tooling support, autocomplete, and animation capabilities.
 * 
 * @layer tokens.properties
 */

@layer tokens.properties {
  /* Display Properties */
  @property --display-inline-block {
    inherits: true;
    initial-value: inline-block;
    syntax: '<custom-ident>';
  }

  @property --display-block {
    inherits: true;
    initial-value: block;
    syntax: '<custom-ident>';
  }
  
  @property --display-inline {
    inherits: true;
    initial-value: inline;
    syntax: '<custom-ident>';
  }
  
  @property --display-flex {
    inherits: true;
    initial-value: flex;
    syntax: '<custom-ident>';
  }

  @property --display-grid {
    inherits: true;
    initial-value: grid;
    syntax: '<custom-ident>';
  }

  /* Position Properties */
  @property --position-center {
    inherits: true;
    initial-value: center;
    syntax: '<custom-ident>';
  }

  @property --position-middle {
    inherits: true;
    initial-value: middle;
    syntax: '<custom-ident>';
  }

  @property --position-baseline {
    inherits: true;
    initial-value: baseline;
    syntax: '<custom-ident>';
  }

  @property --position-top {
    inherits: true;
    initial-value: top;
    syntax: '<custom-ident>';
  }

  @property --position-bottom {
    inherits: true;
    initial-value: bottom;
    syntax: '<custom-ident>';
  }

  @property --position-100 {
    inherits: true;
    initial-value: 100;
    syntax: '<percentage>';
  }

  /* Background Properties */
  @property --bg-no-repeat {
    inherits: true;
    initial-value: no-repeat;
    syntax: '<custom-ident>';
  }

  /* Layout Variables */
  :root {
    /* Grid System */
    --grid-cols-1: repeat(1, minmax(0, 1fr));
    --grid-cols-2: repeat(2, minmax(0, 1fr));
    --grid-cols-3: repeat(3, minmax(0, 1fr));
    --grid-cols-4: repeat(4, minmax(0, 1fr));
    --grid-cols-5: repeat(5, minmax(0, 1fr));
    --grid-cols-6: repeat(6, minmax(0, 1fr));
    --grid-cols-7: repeat(7, minmax(0, 1fr));
    --grid-cols-8: repeat(8, minmax(0, 1fr));
    --grid-cols-9: repeat(9, minmax(0, 1fr));
    --grid-cols-10: repeat(10, minmax(0, 1fr));
    --grid-cols-11: repeat(11, minmax(0, 1fr));
    --grid-cols-12: repeat(12, minmax(0, 1fr));

    /* Flexbox */
    --flex-1: 1 1 0%;
    --flex-auto: 1 1 auto;
    --flex-initial: 0 1 auto;
    --flex-none: none;

    /* Container Sizes */
    --container-sm: 640px;
    --container-md: 768px;
    --container-lg: 1024px;
    --container-xl: 1280px;
    --container-2xl: 1536px;

    /* Layout Spacing */
    --layout-gap: var(--space-4);
    --layout-gap-sm: var(--space-2);
    --layout-gap-lg: var(--space-6);

    /* Z-Index Layers */
    --z-index-dropdown: 1000;
    --z-index-sticky: 1020;
    --z-index-fixed: 1030;
    --z-index-modal-backdrop: 1040;
    --z-index-offcanvas: 1050;
    --z-index-modal: 1060;
    --z-index-popover: 1070;
    --z-index-tooltip: 1080;
    --z-index-toast: 1090;
  }
} 